{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "http://example.com/example.json",
  "type": "object",
  "title": "The root schema",
  "description": "Schema for book resource",
  "default": {},
  "examples": [
    {
      "isbn": "0691161518",
      "amazon_url": "http://a.co/eobPtX2",
      "author": "Matthew Lane",
      "language": "english",
      "pages": 264,
      "publisher": "Princeton University Press",
      "title": "Power-Up: Unlocking the Hidden Mathematics in Video Games",
      "year": 2017
    }
  ],
  "required": [
    "isbn",
    "amazon_url",
    "author",
    "language",
    "pages",
    "publisher",
    "title",
    "year"
  ],
  "properties": {
    "isbn": {
      "$id": "#/properties/isbn",
      "type": "string",
      "title": "The isbn schema",
      "description": "ISBN for book",
      "default": "",
      "examples": ["0691161518"]
    },
    "amazon_url": {
      "$id": "#/properties/amazon_url",
      "type": "string",
      "title": "The amazon_url schema",
      "description": "Amazon url for book",
      "default": "",
      "examples": ["http://a.co/eobPtX2"]
    },
    "author": {
      "$id": "#/properties/author",
      "type": "string",
      "title": "The author schema",
      "description": "Author of book",
      "default": "",
      "examples": ["Matthew Lane"]
    },
    "language": {
      "$id": "#/properties/language",
      "type": "string",
      "title": "The language schema",
      "description": "Book language",
      "default": "",
      "examples": ["english"]
    },
    "pages": {
      "$id": "#/properties/pages",
      "type": "integer",
      "title": "The pages schema",
      "description": "Number of pages of book",
      "default": 0,
      "examples": [264]
    },
    "publisher": {
      "$id": "#/properties/publisher",
      "type": "string",
      "title": "The publisher schema",
      "description": "Book publisher",
      "default": "",
      "examples": ["Princeton University Press"]
    },
    "title": {
      "$id": "#/properties/title",
      "type": "string",
      "title": "The title schema",
      "description": "Book title",
      "default": "",
      "examples": ["Power-Up: Unlocking the Hidden Mathematics in Video Games"]
    },
    "year": {
      "$id": "#/properties/year",
      "type": "integer",
      "title": "Year book was published",
      "description": "An explanation about the purpose of this instance.",
      "default": 0,
      "examples": [2017]
    }
  },
  "additionalProperties": true
}
